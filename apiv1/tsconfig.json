{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["es2021"],
    "paths": {
      "*": ["*", "src/*"]
    },
    "allowJs": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
